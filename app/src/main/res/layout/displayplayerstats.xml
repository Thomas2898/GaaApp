<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Back"
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Back"
        android:text="Select Player"
        android:textSize="20dp"
        android:id="@+id/Player" />

    <Spinner
        android:id="@+id/playerDropDown"
        android:layout_below="@+id/Player"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/Search"
        android:text="Search"
        android:layout_marginLeft="128dp"
        android:layout_below="@+id/playerDropDown"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Search"
        android:text="Pass Conversion:"
        android:textSize="20dp"
        android:id="@+id/Pass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Search"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/PassValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pass"
        android:text="Point Conversion:"
        android:textSize="20dp"
        android:id="@+id/Point" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Pass"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/PointValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Point"
        android:text="Goal Conversion:"
        android:textSize="20dp"
        android:id="@+id/Goal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/PointValue"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/GoalValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Goal"
        android:text="Turnovers:"
        android:textSize="20dp"
        android:id="@+id/Turn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/GoalValue"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/Turnover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Turn"
        android:text="Dispossessed:"
        android:textSize="20dp"
        android:id="@+id/Dis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Turnover"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/Dispossessed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Dis"
        android:text="Block:"
        android:textSize="20dp"
        android:id="@+id/Blk" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Dispossessed"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/Block" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Blk"
        android:text="Kickouts:"
        android:textSize="20dp"
        android:id="@+id/Kickout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Block"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/KickoutValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Kickout"
        android:text="Saves:"
        android:textSize="20dp"
        android:id="@+id/Sav" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/KickoutValue"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/Saves" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sav"
        android:text="Yellow Card(s):"
        android:textSize="20dp"
        android:id="@+id/YC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Saves"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/YellowCard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/YC"
        android:text="Red Cards:"
        android:textSize="20dp"
        android:id="@+id/RC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/YellowCard"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/RedCard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RC"
        android:text="Black Cards:"
        android:textSize="20dp"
        android:id="@+id/BC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/RedCard"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/BlackCard" />




</RelativeLayout>